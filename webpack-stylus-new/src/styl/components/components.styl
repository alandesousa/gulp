.box__btn
  margin 5px 0
  @media (max-width $screen-sm)
    max-width: 360px
    min-width: 320px
    text-align: center
    margin: 10px auto 0;
  .btn
    color: $branco;
    text-shadow 0px 3px 0 rgba(11, 98, 33, 0.8)
    border-radius 35px
    box-shadow 0px 4px 0 0 #156528
    background-image linear-gradient(to bottom, #49c319, #247c3b)
    font-family BebasNeue
    font-size 44px
    // font-weight 700
    font-style: italic
    padding: 15px 46px 13px
    line-height: 1;
    display: inline-block
    transition 0.3s
    @media (max-width $screen-md)
      padding: 15px 25px 13px
    &:hover
      transition 0.3s ease-out
      transform: scale(1.04);
    @media (max-width $screen-sm)
      box-shadow 0px 4px 0 0 #455800
      fs 28px
      min-width 100%
      max-width 100%
      padding: 12px 0 10px;
      // height: 49px;
      display: flex
      align-items: center
      justify-content: center



.box__btn.btn--center
