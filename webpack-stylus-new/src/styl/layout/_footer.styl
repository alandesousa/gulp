.rodape
    .rodape1
        background-color #17712e
        padding 50px 0
        @media (max-width $screen-sm)
            padding 25px 0
    &--container
        display: flex
        justify-content: space-between
        @media (max-width $screen-md)
            flex-wrap: wrap
            justify-content: space-between
            align-items: flex-start
        @media (max-width $screen-sm)
            flex-direction: column
            align-items: center
            text-align: center
    &__item
        max-width: 25%
        min-width: 25%
        @media (max-width $screen-md)
            margin-bottom 30px
            max-width: 35%
            min-width: 35%
        @media (max-width $screen-sm)
            max-width: 100%
            min-width: 100%
            margin-bottom 10px
        &.item1
            max-width: 19%
            min-width: 19%
            @media (max-width $screen-md)
                max-width: 30%
                min-width: 30%
            @media (max-width $screen-sm)
                max-width: 100%
                min-width: 100%
        &.item2
            max-width: 19%
            min-width: 19%
            @media (max-width $screen-md)
                max-width: 30%
                min-width: 30%
            @media (max-width $screen-sm)
                max-width: 100%
                min-width: 100%


    &__logo
        background url(../assets/images/logo.png) left top no-repeat
        width 222px
        height 125px
        // margin-top 30px
        @media (max-width $screen-md)
            background-size auto 100px
            height 100px
            width 175px
        @media (max-width $screen-sm)
            margin 0 auto
            // background-size auto 60px
            // width 122px
            // height 60px

    &__titulo
        font-size 18px
        font-weight bold
        color $branco
        margin 0 0 15px
        @media (max-width $screen-sm)
            margin 10px 0 5px

    &__link
        font-size 14px
        line-height 1.86
        color $branco
        display inline-block
        transition: .3s ease-out;
        @media (max-width $screen-sm)
            margin 0 10px
        &:hover
            color $cor-padrao
            transition: .3s ease-out;
        &::before
            content "â€¢"
            color $cor-padrao
            margin-right 5px
            font-weight: bold

    &__descricao
        font-size 14px
        line-height 1.86
        color $branco
    &__email
        font-size 16px
        font-weight bold
        line-height 1.75
        color #ffcc00

    &__rastreio
        background-color $cor-padrao
        // border 1px solid $cor-padrao2
        display: inline-block
        font-size 14px
        font-weight: bold
        color $branco
        padding 15px 38px
        transition: .3s
        margin-top 10px
        border-radius: 24px
        @media (max-width $screen-md)
            padding 15px
        .ico--rastreio
            width 37px
            height 23px
            background url(../assets/images/ico-rastreio.png) left top no-repeat
            display: inline-block
            margin-right 7px
            vertical-align: sub
        &:hover
            color #d4ed00
            // border 1px solid #d4ed00
            transition: .3s ease-out;

    .copiryght
        padding 25px 0
        text-align: center
        @media (max-width $screen-sm)
            padding 15px 0

        p
            font-size 16px
            color $preto
            .copy--destaque
                font-weight bold
                color $cor-padrao
