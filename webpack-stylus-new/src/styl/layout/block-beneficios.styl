.beneficios
  background-image linear-gradient(to top, #f5f5f5, $branco)
  padding 30px 0
  margin-bottom 50px
  @media (max-width $screen-sm)
    padding 20px 0
    margin-bottom 0
  &--container
    display: flex
    justify-content: space-between
    position relative
    @media (max-width $screen-sm)
      flex-direction: column
  &__content
    max-width: 60%
    min-width: 60%
    @media (max-width $screen-md)
      max-width: 50%
      min-width: 50%
    @media (max-width $screen-sm)
      max-width: 100%
      min-width: 100%
      text-align: center
  &__titulo
    color $cor-padrao
  &__thumb
    position: absolute
    top -150px
    right 0
    max-width 393px
    min-width 393px
    @media (max-width $screen-md)
      position relative
      top 0
      max-width 300px
      min-width 300px
    @media (max-width $screen-sm)
      max-width: 150px
      min-width 150px
      left 0
      margin 0 auto
