btn()
  border-radius 10px
  display inline-block
  text-align center
  text-transform uppercase
  font-size 25px
  fm $fontblack
  padding 21px 45px
  letter-spacing: 2px;
  // min-width 490px
  // max-width 490px
  @media (max-width $screen-sm)
    fs 19px
    padding 12px 16px
    min-width 100%
    max-width 100%
medium()
  font-size 22px
  fm $gothamblack
  padding 10px 39px
low()
  padding 9px 28px
  fm $gothambold
  margin-left 17px

btn--corpadrao()
  background linear-gradient(to top ,$btcor-padrao1, $btcor-padrao2)
  color $branco
  text-shadow 2px 2px 1px $btborda-padrao1
  border-bottom 3px solid $btborda-padrao1
  transition 0.3s
  &:hover
    background linear-gradient(to bottom ,$btcor-padrao1, $btcor-padrao2)
    transition 0.3s ease-out
    transform scale(1.05)


