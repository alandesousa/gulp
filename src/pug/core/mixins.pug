//- bloco slider
mixin slider(id,  ...items)
	ul(class=id)
		- for (var x = 0; x < 5; x++)
			li
				.slider-left
					a(href="#" class="slider-link") 
						img(src="img/slider1.jpg", alt="", class="img-full")
						.content
							h2.titulo Season 8 EP XII
							p.sub-titulo Confira os novos updates
				.slider-right
					.item
						a(href="#") 
							img(src="img/slider2-1.jpg", alt="", class="img-full")
							.content
								h2.titulo Party com XP Extra
								p.sub-titulo Participe e receba bônus EXP
					.item
						a(href="#") 
							img(src="img/slider2-2.jpg", alt="", class="img-full")
							.content
								h2.titulo DROP Valorizado
								p.sub-titulo Itens e jóias super valorizados

//- bloco incremento variaveis
mixin slider1()
	.box-videos
		- var n = 0;
		ul.bxslider2
			while n < 6
				li.item-video= n++
					.thumb-video
						img(src="img/thumb-videos.jpg", alt="", class="img-full")
					a(href="#" class="" title=slider1)
						h2 #{slider1}
					p #{slider2}

