//- menu arrays 
mixin menu2(id)
	ul(class=id)
		each item in menu
			li.menu-item
				a(href="#" class="menu-link" title=item )= item

//- menu
mixin menu(id, ...items)
	ul(class=id)
		each item in items
			li.menu-item
				a(href="#" class="menu-link" title=item )= item

//- redes sociais
mixin sociais(id, ...items)
	ul(class=id)
		each item in items
			li.menu-item
				a(href="#" class="menu-link" title=item )= item

